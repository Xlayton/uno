{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "es5",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "types": ["jest", "node"],
    "typeRoots": ["node_modules/@types",],
    "lib": ["es2017", "dom"],
    "paths": {
      "@config/*": ["src/config/*"],
      "@modules/*": ["src/modules/*"],
      "@helpers/*": ["src/helpers/*"],
    }
  },
  "include": [
    "**/*.ts",
    "**.*.js",
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}