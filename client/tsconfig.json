{
  "compilerOptions": {
    "baseUrl": "src",
    "target": "es5",
    "sourceMap": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ES6",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react",
    "paths": {
      "@app": ["/*"],
      "@pages/*": ["pages/*"],
      "@components/*": ["components/*"],
      "@modules/*": ["modules/*"],
      "@helpers/*": ["helpers/*"],
    }
  },
  "include": [
    "src"
  ]
}
